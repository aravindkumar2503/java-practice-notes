import java.util.Scanner;
class  diamond
{
	static  Scanner sc=new Scanner(System.in);
	public static void main(String[] args) 
	{
		//int n=7;
		System.out.print("Enter the num:");
		int n=sc.nextInt();
		for(int i=0;i<n;i++)
		{
			for (int j=0;j<n-1;j++ )
			{
				System.out.print("  ");
			}
			for (int j=0;j<=i*2;j++ )
			{
				System.out.print("* ");
			}
			System.out.println();
			}
			
		}
		
	}

